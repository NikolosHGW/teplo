<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Teplo">
    <Style x:Key="imageHor">
        <Style.Triggers>
            <DataTrigger Binding="{Binding IsState}" Value="False">
                <Setter Property="Image.Source" Value="Resources/valveCLS.png" />
            </DataTrigger>
            <DataTrigger Binding="{Binding IsState}" Value="True">
                <Setter Property="Image.Source" Value="Resources/valveOPN.png" />
            </DataTrigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>